<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.barber.controller.guicontroller.interface2.RegistrationChoiceController2">
   <children>

      <Text layoutX="76.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="Registrati come barbiere o utente" wrappingWidth="447.33"
            style="-fx-fill: black;">
         <font>
            <Font size="33.0"/>
         </font>
      </Text>

      <Button fx:id="userChoice" layoutX="220.0" layoutY="130.0" mnemonicParsing="false"
              text="Registrati come Utente" onAction="#onSingInUser"
              prefHeight="50.0" prefWidth="220.0"
              style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 999; -fx-font-size: 14px; -fx-font-weight: bold;"/>

      <Button fx:id="barberChoice" layoutX="220.0" layoutY="195.0" mnemonicParsing="false"
              text="Registrati come Barbiere" onAction="#onSignInBarber"
              prefHeight="50.0" prefWidth="220.0"
              style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 999; -fx-font-size: 14px; -fx-font-weight: bold;"/>

      <Button fx:id="backToWelcomePage" layoutX="220.0" layoutY="260.0" mnemonicParsing="false"
              text="Torna alla Welcome Page" onAction="#backToWelcomePage"
              prefHeight="44.0" prefWidth="220.0"
              style="-fx-background-color: #e5e7eb; -fx-text-fill: #111827; -fx-background-radius: 999; -fx-font-size: 13px;"/>

   </children>
</AnchorPane>
