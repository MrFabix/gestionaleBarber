<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.barber.controller.guicontroller.interface2.BookingFormGuiController2">

    <!-- Sfondo verdino -->
    <children>
        <Rectangle layoutX="0.0" layoutY="0.0" width="900.0" height="600.0"
                   mouseTransparent="true" strokeWidth="0"
                   fill="linear-gradient(to bottom, #10b981, #0ea5a4, #059669)"/>

        <GridPane fx:id="bookingForm" alignment="CENTER" hgap="10" vgap="10"
                  prefHeight="600.0" prefWidth="900.0"
                  AnchorPane.topAnchor="0.0">

            <Label text="Booking Form" style="-fx-font-size: 20px; -fx-font-weight: bold;"
                   GridPane.columnIndex="2" GridPane.rowIndex="3"/>

            <!-- 1) Full Name (primo campo) -->
            <Label text="Full Name:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <TextField fx:id="nameField" prefHeight="26.0" prefWidth="370.0"
                       promptText="Enter your name"
                       style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"
                       GridPane.columnIndex="3" GridPane.rowIndex="4"/>

            <Label text="Email" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
            <TextField id="usernameField" fx:id="emailField" cache="true"
                       prefHeight="36.0" prefWidth="156.0" promptText="Email"
                       style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"
                       GridPane.columnIndex="3" GridPane.rowIndex="5"/>

            <Label text="Phone Number:" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
            <TextField fx:id="phoneField" promptText="Enter your phone number"
                       style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"
                       GridPane.columnIndex="3" GridPane.rowIndex="6"/>


            <Label text="Date of Appointment:" GridPane.columnIndex="2" GridPane.rowIndex="7"/>
            <HBox spacing="8.0" GridPane.columnIndex="3" GridPane.rowIndex="7">
                <children>
                    <TextField fx:id="dayField"   promptText="GG"   prefWidth="60.0"
                               style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"/>
                    <TextField fx:id="monthField" promptText="MM"   prefWidth="60.0"
                               style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"/>
                    <TextField fx:id="yearField"  promptText="AAAA" prefWidth="90.0"
                               style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"/>
                </children>
            </HBox>

            <Label text="Orario" GridPane.columnIndex="2" GridPane.rowIndex="8"/>
            <TextField fx:id="orario" prefHeight="26.0" prefWidth="281.0"
                       style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"
                       GridPane.columnIndex="3" GridPane.rowIndex="8"/>

            <Label text="Service:" GridPane.columnIndex="2" GridPane.rowIndex="10"/>
            <ComboBox fx:id="serviceComboBox" prefHeight="26.0" prefWidth="281.0"
                      style="-fx-background-color: #374151; -fx-text-fill: white; -fx-background-radius: 10;"
                      GridPane.columnIndex="3" GridPane.rowIndex="10">
                <items>
                    <!-- Popola da controller -->
                </items>
            </ComboBox>

            <Label text="Notes:" GridPane.columnIndex="2" GridPane.rowIndex="11"/>
            <TextField fx:id="notes" prefHeight="66.0" prefWidth="278.0"
                       promptText="Any additional notes"
                       style="-fx-background-color: #374151; -fx-text-fill: white; -fx-prompt-text-fill: #9CA3AF; -fx-background-radius: 10;"
                       GridPane.columnIndex="3" GridPane.rowIndex="11"/>

            <!-- Bottoni: primario verdino a sinistra, secondario a destra -->
            <Button fx:id="bookButton" text="Book Appointment"
                    onAction="#handleBooking"
                    prefHeight="26.0" prefWidth="198.0"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 999; -fx-font-size: 14px; -fx-font-weight: bold;"
                    GridPane.columnIndex="2" GridPane.rowIndex="12"/>

            <Button fx:id="goBackButton" text="Back To barber"
                    onAction="#goBack" mnemonicParsing="false"
                    prefHeight="26.0" prefWidth="126.0"
                    style="-fx-background-color: #e5e7eb; -fx-text-fill: #111827; -fx-background-radius: 999; -fx-font-size: 13px;"
                    GridPane.columnIndex="3" GridPane.rowIndex="12"/>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints maxWidth="226.39998779296874" minWidth="140.80001220703124" prefWidth="226.39998779296874"/>
                <ColumnConstraints maxWidth="363.1999877929687"  minWidth="277.6000122070312"  prefWidth="277.6000122070312"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/><RowConstraints/><RowConstraints/><RowConstraints/>
                <RowConstraints/><RowConstraints minHeight="10.0" prefHeight="30.0"/>
                <RowConstraints/><RowConstraints/><RowConstraints/>
                <RowConstraints/><RowConstraints/><RowConstraints/>
            </rowConstraints>

        </GridPane>
    </children>
</AnchorPane>
