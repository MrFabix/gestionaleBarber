<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.barber.controller.guicontroller.interface2.ManageShopGuiController2"
            style="-fx-background-color: linear-gradient(to bottom, #1f2937, #111827);">

   <!-- Navbar -->
   <children>
      <fx:include source="navbar2.fxml"/>

      <!-- Content Wrapper -->
      <VBox spacing="20.0" AnchorPane.topAnchor="70.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" AnchorPane.bottomAnchor="24.0">
         <children>
            <!-- Header -->
            <Label text="Gestione Negozio" textFill="white">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>

            <!-- CARD: Servizi -->
            <VBox spacing="16.0"
                  style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.2, 0, 8);">
               <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

               <children>
                  <Label text="Servizi" textFill="white">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>

                  <!-- Row: Nome + Prezzo + Aggiungi -->
                  <HBox spacing="12.0">
                     <children>
                        <TextField fx:id="nomeServizio" promptText="Inserisci nome servizio" HBox.hgrow="ALWAYS"
                                   style="-fx-background-color: #0b1220; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 10;"/>

                        <TextField fx:id="costo" promptText="Prezzo" prefWidth="140.0"
                                   style="-fx-background-color: #0b1220; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 10;"/>

                        <Button fx:id="addService" text="Aggiungi" onAction="#aggiungiServizio"
                                style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 999; -fx-pref-height: 50; -fx-pref-width: 160;"/>
                     </children>
                  </HBox>

                  <!-- Lista Servizi -->
                  <Label text="Lista dei servizi" textFill="white"/>
                  <ScrollPane fitToWidth="true" prefHeight="240.0"
                              style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                     <content>
                        <VBox fx:id="listService" spacing="8.0"
                              style="-fx-padding: 6;"/>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>

            <!-- CARD: Orario di lavoro -->
            <VBox spacing="16.0"
                  style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.2, 0, 8);">
               <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
               <children>
                  <Label text="Orario di lavoro" textFill="white">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>

                  <!-- Row: Inizio / Fine -->
                  <HBox spacing="12.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Inizio" textFill="white"/>
                        <TextField fx:id="inizioOrario" promptText="09:00" prefWidth="120.0"
                                   style="-fx-background-color: #0b1220; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 10;"/>

                        <Label text="Fine" textFill="white"/>
                        <TextField fx:id="fineOrario" promptText="18:00" prefWidth="120.0"
                                   style="-fx-background-color: #0b1220; -fx-text-fill: white; -fx-prompt-text-fill: #9ca3af; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 10;"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="setOrarioDiLavoro" text="Inserisci orario" onAction="#upgradeOrarioLavoro"
                                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 999; -fx-pref-height: 50; -fx-pref-width: 200;"/>
                     </children>
                  </HBox>

                  <Label text="Suggerimento: usa il formato 24h (es. 09:00â€“18:00)" textFill="#9ca3af"/>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
