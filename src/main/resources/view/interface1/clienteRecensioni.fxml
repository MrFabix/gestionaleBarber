<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.barber.controller.guicontroller.interface1.ClienteRecensioniGuiController1">

   <!-- Sidebar/Navbar a sinistra -->
   <fx:include fx:id="navigationBar" source="navbar1.fxml" />

   <!-- Contenuto a destra (stesso pattern del tuo esempio) -->
   <AnchorPane layoutX="233.0" prefHeight="720.0" prefWidth="667.0">
      <children>





         <!-- Layout principale: lista + dettaglio -->
         <HBox spacing="16.0"
               AnchorPane.topAnchor="94.0"
               AnchorPane.bottomAnchor="20.0"
               AnchorPane.leftAnchor="50.0"
               AnchorPane.rightAnchor="50.0">

            <!-- Colonna sinistra: lista -->
            <VBox spacing="10.0" prefWidth="290.0">
               <Label text="List" style="-fx-font-size: 16px; -fx-font-weight: 700;" />

               <ListView fx:id="recensioniListView"
                         prefHeight="480.0"
                         style="-fx-border-color: black; -fx-border-width: 5;">
                  <effect>
                     <DropShadow />
                  </effect>
               </ListView>

               <HBox spacing="10.0">
                  <MFXButton fx:id="eliminaRecensioneButton"
                             text="Delete"
                             onAction="#onEliminaRecensione" />


               </HBox>
            </VBox>

            <!-- Colonna destra: dettaglio -->
            <VBox spacing="10.0" prefWidth="310.0"
                  style="-fx-background-color: rgba(0,0,0,0.03); -fx-background-radius: 12px;">
               <padding>
                  <Insets top="14" right="14" bottom="14" left="14"/>
               </padding>

               <Label text="Review details" style="-fx-font-size: 16px; -fx-font-weight: 700;" />

               <HBox spacing="10.0">
                  <Label text="Service:" style="-fx-font-weight: 700;" />
                  <Label fx:id="lblDettaglioServizio" text="-" />
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Rating:" style="-fx-font-weight: 700;" />
                  <Label fx:id="lblDettaglioRating" text="-" />
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Date:" style="-fx-font-weight: 700;" />
                  <Label fx:id="lblDettaglioData" text="-" />
               </HBox>

               <Label text="Comment:" style="-fx-font-weight: 700;" />
               <Label fx:id="lblDettaglioCommento"
                      text="-"
                      wrapText="true"
                      style="-fx-opacity: 0.9;" />
            </VBox>

         </HBox>

         <!-- Per compatibilitÃ  col controller se esiste ancora questo campo -->
         <MFXButton fx:id="aggiungiRecensioneButton" visible="false" managed="false" />

      </children>
   </AnchorPane>

</AnchorPane>
